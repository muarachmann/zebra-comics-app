<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.level500.ub.zebracomics.HomeActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_margin="@dimen/padd_10"/>


    <TextView
                android:id="@+id/eng_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:text="English"
                android:drawableLeft="@drawable/flag_united_kingdom"
                android:drawablePadding="@dimen/padd_10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp" />

            <CheckBox
                android:id="@+id/eng_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>


    <TextView
        android:id="@+id/french_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="French"
        android:drawableLeft="@drawable/flag_france"
        android:drawablePadding="@dimen/padd_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <CheckBox
        android:id="@+id/french_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
   />






    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Language"
        android:background="@color/colorPrimaryDark"
        android:textColor="#fff"
        android:id="@+id/change_lang"/>


</LinearLayout>